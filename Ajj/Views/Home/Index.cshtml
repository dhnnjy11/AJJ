@{
    ViewData["Title"] = "Home";
}
@section additionalMeta {
    <meta name="keywords" content="Employment in Japan,work Japan,jobs for foreigners,Visa Sponsorship,Part time job, Full time job, Gaijin" />
    <meta name="description" content="jobsjapan.com is Japan's biggest website to provide jobs in Japan to the foreigners, We can help you in getting jobs and sponsorship visa also, Register Now, Jobs in japan, All Jobs japan">
}

<section id="service-main" class="section">

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="service-item">
                    <div class="icon-wrapper">
                        <i class="ti-search">
                        </i>
                    </div>
                    <h2>
                        Search millions of jobs
                    </h2>
                    <p>
                        Search millions of job in one place
                    </p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">

                <div class="service-item">
                    <div class="icon-wrapper">
                        <i class="ti-world">
                        </i>
                    </div>
                    <h2>
                        Location base Search
                    </h2>
                    <p>
                        Now, Get your job in your location
                    </p>
                </div>
            </div>
            <div class="col-sm-6 col-md-4">
                <div class="service-item">
                    <div class="icon-wrapper">
                        <i class="ti-stats-up">
                        </i>
                    </div>
                    <h2>
                        Top Careers
                    </h2>
                    <p>
                        Get all trending of japan
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section section__client">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">
                企業様専用
            </h2>
            <p class="section-text">
                求人情報の掲載をご希望される企業様はこちらからログインもしくはご登録下さい。
            </p>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-6">
                <div class="section__button">
                    <a asp-controller="Account" asp-action="LoginClient" class="btn btn-common btn-50per">企業様ログイン</a>
                </div>
            </div>
            <div class="col-sm-8 col-sm-6">
                <div class="section__button">
                    <a asp-controller="Account" asp-action="RegisterClient" class="btn btn-common btn-50per">新規企業様ご登録</a>
                </div>
            </div>
        </div>
    </div>
</section>
